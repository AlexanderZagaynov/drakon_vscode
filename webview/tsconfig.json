{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2024",
    "outDir": "../assets/js",
    "rootDir": "./src",
    "lib": ["dom", "es2024"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": false
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
}
